<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="bp_base" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.coolingwarminglaw.HelloController">



    <top>
        <VBox alignment="TOP_CENTER" spacing="15">
            <Label style="-fx-font-size: 50; -fx-text-fill: blue; -fx-font-family: 'Arial Black'" text="Ley de enfriamiento de Newton" />


        </VBox>
    </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
   
               <GridPane alignment="CENTER" hgap="10.0" prefHeight="50" prefWidth="50" vgap="15.0">
   
                   <Label text="Temperatura Ambiente: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                   <TextField fx:id="txt_tempAmbiente" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   
                   <Label text="Temperatura actual: " GridPane.columnIndex="2" GridPane.rowIndex="0" />
                   <TextField fx:id="txt_tempActual" promptText="f(0)=?" GridPane.columnIndex="3" GridPane.rowIndex="0" />
   
                   <Label text="Tiempo T: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                   <TextField fx:id="txt_x" promptText="f(?)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
                   <Label text="temperatura T: " GridPane.columnIndex="2" GridPane.rowIndex="1" />
                   <TextField fx:id="txt_fx" promptText="f(T)" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="23.0" left="23.0" right="23.0" top="23.0" />
               </padding>
   
               </GridPane>
   
                   <Button onAction="#m_calcular" text="Start" />
         </children>
      </VBox>
   </center>










</BorderPane>
